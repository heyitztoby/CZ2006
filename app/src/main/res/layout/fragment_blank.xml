<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000"
    android:clickable="true"
    tools:context=".BlankFragment">

    <TextView
        android:id="@+id/point_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Adjust Settings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#cFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pointsetting"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Adjust Sort"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#cFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pointsort"
        app:layout_constraintTop_toBottomOf="@+id/pointsetting" />

    <TextView
        android:id="@+id/point_sort2"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="106dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Number of Empty Slots"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#cFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pointsort2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pointsort"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pointsort"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:scaleType="centerInside"
        android:src="@drawable/whitearrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_setting" />

    <ImageView
        android:id="@+id/pointsort2"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="64dp"
        android:scaleType="centerInside"
        android:src="@drawable/whitearrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_sort"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pointsetting"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="36dp"
        android:scaleType="centerInside"
        android:src="@drawable/whitearrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pointtosearch"
        android:layout_width="77dp"
        android:layout_height="140dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="308dp"
        android:scaleType="centerInside"
        android:scaleX="-1"
        android:scaleY="-1"
        android:src="@drawable/whitedown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:layout_marginTop="208dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Type your location here to search for nearest carpark!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#cFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/point_sort2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />


</androidx.constraintlayout.widget.ConstraintLayout>