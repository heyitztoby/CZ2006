<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/vehicle_header">
        <ListPreference
            android:summary="%s"
            android:entries="@array/vehicleList"
            android:entryValues="@array/vehicleList"
            android:key="vehiclePref"
            android:title="Select vehicle" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/parking_header">
        <ListPreference
            android:summary="%s"
            android:entries="@array/parkingList"
            android:entryValues="@array/parkingList"
            android:key="parkingPref"
            android:title="Select parking" />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/sort_header">
        <ListPreference
            android:summary="%s"
            android:entries="@array/sortList"
            android:entryValues="@array/sortList"
            android:key="sortPref"
            android:title="Sort by"/>
    </PreferenceCategory>

</PreferenceScreen>
